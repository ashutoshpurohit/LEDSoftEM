<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="700.0" prefWidth="800.0"  xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.eagerminds.eagermindsledsoft.pages.BindPlayerPageController">
    
    <Button onAction="#onActionGetNode" prefHeight="30.0" prefWidth="150.0" text="%get_vnnox_node">
        <VBox.margin>
            <Insets left="15" top="15" />
        </VBox.margin>
    </Button>


    <HBox alignment="BOTTOM_LEFT">
        <VBox.margin>
            <Insets left="15" top="5" />
        </VBox.margin>
        <Label text="%vnnox_node_address" />
        <TextField fx:id="tf_node_host" prefWidth="180" text="" />
    </HBox>
    <HBox>
        <VBox.margin>
            <Insets left="15" top="15" />
        </VBox.margin>
        <Label text="%player_username" />
        <TextField fx:id="tf_node_username" prefWidth="80" text="" />
        <Label text="%player_password" />
        <TextField fx:id="tf_node_password" prefWidth="80" text="" />
        <Label text="%player_type" />
        <TextField fx:id="tf_player_type" prefWidth="80" text="" />
        <Label text="(1-synchronous, 2-asynchronous)" />

        <VBox.margin>
            <Insets left="15" top="5" />
        </VBox.margin>

        <VBox.margin>
            <Insets left="15" top="5" />
        </VBox.margin>
    </HBox>
    <Button onAction="#onActionGetPlayerList" prefHeight="30.0" prefWidth="150.0" text="%get_vnnox_player_list">
        <VBox.margin>
            <Insets left="15" top="15" />
        </VBox.margin>
    </Button>


    <HBox alignment="BOTTOM_LEFT">
        <VBox.margin>
            <Insets left="15" top="15" />
        </VBox.margin>
        <Label text="%vnnox_server_address" />
        <TextField fx:id="tf_vnnox_server_address" prefWidth="220" text="0" />
    </HBox>

    <HBox alignment="BOTTOM_LEFT">
        <VBox.margin>
            <Insets left="15" top="15" />
        </VBox.margin>
        <Label text="%player_username" />
        <TextField fx:id="tf_player_username" prefWidth="100" text="" />
        <Label text="%player_password" />
        <TextField fx:id="tf_player_password" prefWidth="100" text="" />

        <VBox.margin>
            <Insets left="15" top="5" />
        </VBox.margin>
    </HBox>

    <HBox alignment="BOTTOM_LEFT">
        <VBox.margin>
            <Insets left="15" top="5" />
        </VBox.margin>
        <Label text="%player_token" />
        <TextField fx:id="tf_player_token" prefWidth="180" text="" />
    </HBox>


    <HBox alignment="BOTTOM_LEFT">
        <VBox.margin>
            <Insets left="15" top="5" />
        </VBox.margin>
        <Label text="%server_player_identifier" />
        <TextField fx:id="tf_server_player_identifier" prefWidth="180" text="" />
        <Label text="%player_isused" />
        <TextField fx:id="tf_player_isused" prefWidth="80" text="" />
        <Label text="0:Yes,1-No" />

        <VBox.margin>
            <Insets left="15" top="5" />
        </VBox.margin>
    </HBox>
    <HBox alignment="BOTTOM_LEFT">
        <VBox.margin>
            <Insets left="15" top="5" />
        </VBox.margin>
        <Label text="%player_identifier" />
        <TextField fx:id="tf_player_identifier" prefWidth="180" text="" />
        <Label text="%player_name" />
        <TextField fx:id="tf_player_name" prefWidth="80" text="" />


        <VBox.margin>
            <Insets left="15" top="5" />
        </VBox.margin>
    </HBox>
    <HBox>
        <VBox.margin>
            <Insets left="10" top="5" />
        </VBox.margin>

        <Button fx:id="btn_action_set_bind" onAction="#onActionSetBind" prefHeight="30.0" prefWidth="150.0" text="%set_vnnox_bind">

        </Button>

        <Button onAction="#onActionGetBind" prefHeight="30.0" prefWidth="150.0" text="%get_vnnox_bind">
            <VBox.margin>
                <Insets left="15" top="15" />
            </VBox.margin>
        </Button>
    </HBox>
    <TextArea fx:id="ta_show" prefHeight="220.0" prefWidth="200.0">
        <VBox.margin>
            <Insets top="15" />
        </VBox.margin>
    </TextArea>
    
</VBox>

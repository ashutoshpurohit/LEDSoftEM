<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="600.0"
    xmlns="http://javafx.com/javafx" 
    xmlns:fx="http://javafx.com/fxml" 
    fx:controller="com.eagerminds.eagermindsledsoft.pages.network.APNetworkPageController">
    
<HBox>
        <VBox.margin>
            
            <Insets top="15" left="15"/>
        </VBox.margin>

        <Button fx:id="btn_ap_get_open" onAction="#onActionAPGetOpen" prefHeight="30.0"
            prefWidth="150.0" text="%ap_get_open">
            <VBox.margin>
                <Insets left="15" top="15" />
            </VBox.margin>
        </Button>

        <Button fx:id="btn_ap_get" onAction="#onActionAPGet" prefHeight="30.0"
            prefWidth="150.0" text="%ap_get">
            <VBox.margin>
                <Insets left="15" top="15" />
            </VBox.margin>
        </Button>
    </HBox>




    <HBox>
        <VBox.margin>
            <Insets left="15" top="15" />
        </VBox.margin>
        <Label text="%ap_open" />
        <ComboBox prefWidth="80.0" fx:id="cb_ap_open">
        </ComboBox>

        <Button fx:id="btn_ap_set_open" onAction="#onActionAPSetOpen" prefHeight="30.0"
            prefWidth="150.0" text="%ap_set_open">
            <VBox.margin>
                <Insets left="15" top="15" />
            </VBox.margin>
        </Button>
    </HBox>



    <HBox alignment="BOTTOM_LEFT">
        <VBox.margin>
            <Insets left="15" top="25" />
        </VBox.margin>
        <Label text="%ap_alias" />
        <TextField fx:id="tf_ap_alias" text="" prefWidth="120" />
    </HBox>
    <HBox alignment="BOTTOM_LEFT">
        <VBox.margin>
            <Insets left="15" top="5" />
        </VBox.margin>
        <Label text="%ap_suffix" />
        <TextField fx:id="tf_ap_suffix" text="" prefWidth="120" />
    </HBox>
    <HBox alignment="BOTTOM_LEFT">
        <VBox.margin>
            <Insets left="15" top="5" />
        </VBox.margin>
        <Label text="%ap_password" />
        <TextField fx:id="tf_ap_password" text="" prefWidth="120" />
    </HBox>
    <Button fx:id="btn_ap_set" onAction="#onActionAPSet" prefHeight="30.0"
        prefWidth="150.0" text="%ap_set">
        <VBox.margin>
            <Insets left="15" top="15" />
        </VBox.margin>
    </Button>

    <TextArea fx:id="ta_show" prefHeight="150.0" prefWidth="200.0">
        <VBox.margin>
            <Insets top="15" />
        </VBox.margin>
    </TextArea>

</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.eagerminds.eagermindsledsoft.pages.ICareSettingPageController">
    
<Button fx:id="btn_action_get_icare" onAction="#onActionGetiCare" prefHeight="30.0"
        prefWidth="150.0" text="%get_icare_setting">
        <VBox.margin>
            <Insets left="15" top="15" />
        </VBox.margin>
    </Button>

    <HBox alignment="BOTTOM_LEFT">
        <VBox.margin>
            <Insets left="15" top="15" />
        </VBox.margin>
        <Label text="%open_icare" />
        <ComboBox prefWidth="140.0" fx:id="cb_open_icare">
        </ComboBox>
    </HBox>

    <HBox alignment="BOTTOM_LEFT">
        <VBox.margin>
            <Insets left="15" top="5" />
        </VBox.margin>
        <Label text="%icare_server_address" />
        <TextField fx:id="tf_icare_address" text="" prefWidth="320" />
    </HBox>

    <HBox alignment="BOTTOM_LEFT">
        <VBox.margin>
            <Insets left="15" top="5" />
        </VBox.margin>
        <Label text="%device_bind_user" />
        <TextField fx:id="tf_icare_user" text="admin" prefWidth="160" />
    </HBox>


    <Button fx:id="btn_action_set_icare" onAction="#onActionSetiCare" prefHeight="30.0"
        prefWidth="150.0" text="%set_icare_setting">
        <VBox.margin>
            <Insets left="10" />
        </VBox.margin>
    </Button>

    <TextArea fx:id="ta_show" prefHeight="150.0" prefWidth="200.0">
        <VBox.margin>
            <Insets top="15" />
        </VBox.margin>
    </TextArea>

</VBox>

